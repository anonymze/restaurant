---
import type { SanityDocument } from "@sanity/client";
import { sanityClient } from "sanity:client";

const POSTS_QUERY = `*[_type == "menu"]|order(publishedAt desc)[0...12]`;

const posts = await sanityClient.fetch<SanityDocument[]>(POSTS_QUERY);

console.log(posts);
---

<main class="container mx-auto min-h-screen max-w-3xl p-8">
  <h1 class="text-4xl font-bold mb-8">Menu</h1>
  <ul class="flex flex-col gap-y-4">
    {posts.map((post) => (
        <li class="hover:underline">
          <a href={`/posts/${post.title}`}>
            <h2 class="text-xl font-semibold">{post.title}</h2>
          </a>
        </li>
      ))}
  </ul>
</main>